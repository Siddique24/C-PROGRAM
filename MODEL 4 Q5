#include <stdio.h>
long addTwoNumbers(long *, long *);

int main()
{
   long fno, sno, sum;
   printf(" Input the first number : ");
   scanf("%d", &fno);
   printf(" Input the second  number : ");
   scanf("%d", &sno);   
   sum = addTwoNumbers(&fno, &sno);
   printf(" The sum of %d and %d  is %d\n\n", fno, sno, sum);
   return 0;
}
long addTwoNumbers(long *n1, long *n2) 
{
   long sum;
   sum = *n1 + *n2;
   return sum;
}
